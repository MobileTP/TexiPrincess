<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.PayActivity"

    android:background="@drawable/chrome_yellow"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mainIcon"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/kakaopay_main_icon" />

    <EditText
        android:id="@+id/paymentValue"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/rounded_button"
        android:hint="결제할 금액을 입력해주세요."
        android:inputType="number"
        android:maxLength="15"
        android:maxLines="1"
        android:padding="5dip"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/paymentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/kakaopay_icon" />

</LinearLayout>